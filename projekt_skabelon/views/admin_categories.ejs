<% include partials/admin_head.ejs %>
<% include partials/admin_header.ejs %>
<main role="main">
    <% include partials/admin_nav.ejs %>
    <section>
        <a class="newData" href="/admin/category/new">Create a new category</a>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Edit / Delete</th>
            </tr>
            <% results.forEach(result => { %>
            <tr>
                <td>
                    <%= result.id %>
                </td>
                <td>
                    <%= result.name %>
                </td>
                <td>
                    <%= result.description %>
                </td>
                <td>
                    <div>
                        <a href="/admin/category/edit/<%= result.id %>">
                            <p>Edit</p><i class="fas fa-edit"></i>
                        </a>
                        <hr>
                        <a href="/admin/category/delete/<%= result.id %>">
                            <p>Delete</p><i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
            <% }); %>
        </table>
    </section>
</main>

<% include partials/admin_footer.ejs %>